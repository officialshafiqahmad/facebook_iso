        <activity
            android:name=".menuHandler.Friends"
            android:exported="false" />
        <activity
            android:name=".menuHandler.MyAccount"
            android:exported="false" />
        <activity
            android:name=".FeedPage"
            android:exported="false" />
        <activity
            android:name=".menuHandler.New_post"
            android:exported="false" />
        <activity
            android:name=".editHandler.EditPost"
            android:exported="false" />
        <activity
            android:name=".picture.picture"
            android:exported="false" />
        <activity
            android:name=".login.SignupPage"
            android:exported="false" />
        <activity
            android:name=".login.Login_Page"
            android:exported="false">
        </activity>
    </application>

</manifest>